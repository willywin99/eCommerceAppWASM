@page "/admin"
@layout AdminLayout

<div class="banner_section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 mt-5" style="height:600px; overflow:auto">
                <div class="card">
                    <div class="card">
                        <div class="bg-light text-center card-title fs-2">Sales</div>
                    </div>
                </div>
                @if (Achieves.Any())
                {
                    var groupByDate = Achieves.GroupBy(x => x.DatePurchased.Date).ToList();
                    int showCount = 1;
                    @foreach (var item in groupByDate)
                    {
                        <div class="card">
                            <div class="card-header fw-bold">@item.Key.ToShortDateString()</div>
                            <div class="card-body">
                                @foreach (var achieve in item)
                                {
                                    <table class="table table-striped table-bordered">
                                        @if (showCount == 1) 
                                        {
                                            <thead>
                                                <tr>
                                                    <th>Name</th>
                                                    <th>Email</th>
                                                    <th>Product</th>
                                                    <th>Quantity</th>
                                                    <th>Amount</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr style="height:30px">
                                                    <td style="width:100px">@achieve.CustomerName</td>
                                                    <td style="width:100px">@achieve.CustomerEmail</td>
                                                    <td style="width:100px">@achieve.ProductName</td>
                                                    <td style="width:100px">@achieve.QuantityOrdered</td>
                                                    <td style="width:100px">@achieve.AmountPayed</td>
                                                </tr>
                                            </tbody>
                                        }
                                    </table>
                                    showCount++;
                                }
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>

@code {
    IEnumerable<GetAchieve> Achieves = [];
    protected override async Task OnInitializedAsync() => Achieves = await cartService.GetAchieves();
}
